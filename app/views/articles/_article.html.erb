<li>
  <div class="well" style="border-top: 1px solid #CCC; border-radius: 5px 5px 5px 5px;">
  <p><%= link_to article.title, article %></p>
  <%= raw article.description %>
  <p>
    <% if current_user && current_user.admin? %>
      <%= link_to "Редактировать", edit_article_path(article) %>
      | <%= link_to "Удалить", article, method: :delete, data: { confirm: "Вы уверены что хотите удалить статью?" } %>
    <% end %>
  </p>
</div>
</li>