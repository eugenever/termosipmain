<% provide(:title, 'Добавление статьи') %>
<h1>Добавление статьи</h1>

<div class="row">
  <%= render 'shared/panel' %>
  <div class="span9">
    <%= form_for(@article) do |f| %>

      <%= render 'error_article' %>

      <%= f.label "Заголовок" %>
      <%= f.text_field :title %>

      <%= f.label "Краткое описание" %>
      <%= f.text_area :description, size: "60x30" %>

      <%= f.label "Текст статьи" %>
      <%= f.text_area :content %>

      <%= f.submit "Создать статью", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
