<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon_1.ico' %>
    <meta name='yandex-verification' content='63a76e4d0b5b16af' />
    <meta name="google-site-verification" content="Qxvbr4SMOE7EImf8lW10lZD8dvnfUgHpOpJCB84lrRM" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="<%= yield(:meta_keywords) %>" /> 
    <meta name="description" content="<%= yield(:meta_description) %>" />
    <%= render 'layouts/shim' %>    
  </head>
  <body style="<%= 'padding-top: 41px;' if current_page?(root_path) %>">
    <%= render 'layouts/header' %>
    <% if current_page?(root_path) %>
      <%= render 'layouts/mainheader' %>
    <% end %>
    <div class="container container-fluid">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>    
    <a href='#' id='w2b-StoTop' style='display:none;'>Наверх</a>
  </body>
    <script type="text/javascript">
      $(document).ready(function() {
        if ($('textarea').length > 0) {
            var data = $('textarea');
            $.each(data, function(i) {
                CKEDITOR.replace(data[i].id);
            });
        }
      });
    </script>
</html>
